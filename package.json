{
  "name": "daily-task-logger",
  "displayName": "daily-task-logger",
  "description": "",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "daily-task-logger.showToday",
        "title": "Show Today's Tasks"
      },
      {
        "command": "daily-task-logger.addTodayLog",
        "title": "Add Today's Log Entry"
      }
    ],
    "keybindings": [
      {
        "command": "daily-task-logger.addTodayLog",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "configuration": {
      "title": "Daily Task Logger",
      "properties": {
        "daily-task-logger.excludeDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "スキャン対象から除外するディレクトリのglobパターン一覧（例: **/archive/**, **/backup/**）"
        },
        "daily-task-logger.additionalDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "追加でスキャンするディレクトリのパス一覧（絶対パス）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
