{
  "name": "taski",
  "displayName": "Taski",
  "description": "Aggregate tasks from markdown files and display them organized by date",
  "version": "0.0.14",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taski",
          "title": "Taski",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "taski": [
        {
          "id": "taskiView",
          "name": "タスク一覧"
        }
      ]
    },
    "commands": [
      {
        "command": "taski.showToday",
        "title": "Show Today's Tasks"
      },
      {
        "command": "taski.refreshTasks",
        "title": "Refresh Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "taski.addTodayLog",
        "title": "Add Today's Log Entry"
      },
      {
        "command": "taski.addTomorrowLog",
        "title": "Add Tomorrow's Log Entry"
      },
      {
        "command": "taski.toggleTask",
        "title": "Toggle Task Completion"
      },
      {
        "command": "taski.openTodayJournal",
        "title": "Open Today's Journal"
      },
      {
        "command": "taski.syncNow",
        "title": "Sync Now (Git)",
        "icon": "$(cloud-upload)"
      }
    ],
    "keybindings": [
      {
        "command": "taski.addTodayLog",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "taski.addTomorrowLog",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "taski.toggleTask",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "taski.refreshTasks",
          "when": "view == taskiView",
          "group": "navigation"
        },
        {
          "command": "taski.syncNow",
          "when": "view == taskiView && config.taski.gitAutoSync",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Taski",
      "properties": {
        "taski.includeWorkspace": {
          "type": "boolean",
          "default": false,
          "description": "現在のワークスペースをスキャン対象に含めるかどうか"
        },
        "taski.excludeDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "スキャン対象から除外するディレクトリのglobパターン一覧（例: **/archive/**, **/backup/**）"
        },
        "taski.additionalDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "追加でスキャンするディレクトリのパス一覧（絶対パス）"
        },
        "taski.gitAutoSync": {
          "type": "boolean",
          "default": true,
          "description": "$HOME/taskiディレクトリのGit自動同期を有効にする"
        },
        "taski.gitSyncInterval": {
          "type": "number",
          "default": 30,
          "minimum": 30,
          "description": "Git自動同期の間隔（秒）。最小30秒。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build:wasm": "cd parser-wasm && wasm-pack build --target nodejs --out-dir ../src/pkg",
    "compile": "npm run build:wasm && npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run build:wasm && npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run build:wasm && npm run compile-tests && cp -r src/pkg out/pkg && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
